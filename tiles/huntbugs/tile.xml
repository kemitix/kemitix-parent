<project>
    <properties>
        <huntbugs.version>0.0.11</huntbugs.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>one.util</groupId>
                <artifactId>huntbugs-maven-plugin</artifactId>
                <version>${huntbugs.version}</version>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>huntbugs</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin><!-- huntbugs-maven-plugin -->
        </plugins>
    </build>
</project>
